/*
   1
  212
 32123
4321234
*/
#include<stdio.h>
void main()
{
    int i,j,k,m;
    for(i=1;i<=4;i++)
    {
        for(j=1;j<=(4-i);j++)
        {
            printf(" ");
        }
        k=i;
        for(m=1;m<=i;m++)
        {
            printf("%d",k);
            k--;
        }
        k=k+2;
        for(j=1;j<i;j++)
        {
            printf("%d",k);
            k++;
        }
        
        printf("\n");
    }
}
